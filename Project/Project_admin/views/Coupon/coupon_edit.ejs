<div class="col-sm-6">
    <h4 class="page-title">User Table</h4>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="javascript:void(0);">artBeatz</a></li>
        <li class="breadcrumb-item"><a href="javascript:void(0);">Users</a></li>
        <li class="breadcrumb-item active">Customer</li>
    </ol>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <h4 class="mt-0 header-title">Edit Coupon</h4>
                <form data-toggle="validator" id="coupon_form">
                    <input type="hidden" name="id" value="<%=result.id%>">
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2 col-form-label">Coupon
                            Code</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" placeholder="Enter coupon code"
                                id="example-text-input" name="coupon_code" value="<%=result.coupon_code%>">
                        </div>
                    </div>


                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2 col-form-label">Discount</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" placeholder="Discount" id="example-text-input"
                                name="discount" value="<%=result.discount%>">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Discount Type</label>
                        <div class="col-sm-10">
                            <select class="form-control" name="discount_type">
                                <option value="1" <%= result.discount_type == '1' ? 'selected' : ''%>>Percentage
                                </option>
                                <option value="2" <%= result.discount_type == '2' ? 'selected' : ''%>>Flat</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2 col-form-label">Textarea</label>
                        <div class="col-sm-10">
                            <textarea required class="form-control" rows="5"
                                name="description"><%=result.description%></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">
                                Submit
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div> <!-- end col  -->
</div> <!-- end row -->
</div>
</div>

