<%- contentFor('body') %>
  <div class="row">
      <div class="col-12">
          <div class="card">
              <div class="card-body">
                  <h4 class="mt-0 header-title">All Customer</h4>
                  
                  <!-- datatable-buttons     city_table_list -->
                  <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                      <thead>
                        <tr>
                            <th>S.No</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Mobile No.</th>
                            <th>Point</th>
                            <th>Status</th>
                            <th>Manage</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% if(result){ %>
                        <% result.forEach(function(item,i){ %>
                        <tr >
                            <td><%= i+1 %></td>
                            <td><%= item.name%></a></td>
                            <td><%= item.email_id%></td>
                            <td><%= item.mobile_no%></td>
                            <td><%= item.point%></td>
                            <% if (item.status == 1) { %>
                              <td>  <button class="button">Activate</button></td>
                            <%} else { %>
                              <td>  <button class="deactiv">Deactivate</button></td>
                            <% } %>
                            <td><div class="dropdown">
                              <button class="dropbtn">Manage</button>
                              <div class="dropdown-content">
                                <a href="/Customer_view/<%= item.user_pub_id %>">View</a>
                                <a href="/Customer_edit/<%= item.user_pub_id %>">Edit</a>
                                <% if (item.status == 1) { %>
                                <a href="/Customer" id="changeStatus"  onclick="setStatus('<%= item.user_pub_id %>')" value="<%= item.user_pub_id %>"  >Deactivate</a>
                                <%} else { %>
                                <a href="/Customer" id="changeStatus"  onclick="setStatus('<%= item.user_pub_id %>')" value="<%= item.user_pub_id %>"  >Active</a>
                                <% } %>
                              </div>
                            </div></td>
                        </tr>
                        <% }) %>
                        <% } %>
                      </tbody>
                  </table>
              </div>
          </div>
      </div> <!-- end col -->
  </div> <!-- end row -->
