<%- contentFor('body') %>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <ul class="nav nav-tabs nav-tabs-custom" role="tablist">
                    <%- include('customer_partial') %>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane p-3 active">
                        <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap"
                            style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                            <thead>
                                <tr>
                                    <th>S.No</th>
                                    <th>Job Title</th>
                                    <th>Price</th>
                                    <th>Date</th>
                                    <th>Time</th>
                                    <th>Address</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% result.forEach(function(item,i){ %>
                                <tr>
                                    <td><%= i+1 %></td>
                                    <td><%= item.job_title%></td>
                                    <td><%= item.price%></td>
                                    <td><%= item.date%></td>
                                    <td><%= item.time%></td>
                                    <td><%= item.address%></td>
                                    <td>
                                        <% if(item.status == 0){ %>
                                            <button class="button1">Pendding</button>
                                        <% } else if(item.status == 1){ %>
                                            <button class="button">Confirmed</button>
                                        <% } else if(item.status == 2){ %>
                                            <button class="button">Completed</button>
                                        <% } else if(item.status == 3){ %>
                                            <button class="button3">Rejected</button>
                                        <% } else if(item.status == 4){ %>
                                            <button class="button3">Deactivated</button>
                                        <% } else if(item.status == 5){ %>
                                            <button class="button2">Processed</button>
                                        <% } %>
                                    </td>
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- end col -->
</div> <!-- end row -->
